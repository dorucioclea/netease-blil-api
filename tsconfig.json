{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "ES2017",
    "skipDefaultLibCheck": true,
    "noImplicitAny": true,
    "lib": [
      "ES2020"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}